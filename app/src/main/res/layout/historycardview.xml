<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        >

        <ImageView
            android:id="@+id/HistoryImg"
            android:layout_width="90dp"
            android:layout_height="105dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/historyscreenshot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TxtHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_23_07_thur"
            android:textColor="#8D6E63"
            app:layout_constraintStart_toEndOf="@+id/HistoryImg"
            app:layout_constraintTop_toTopOf="@+id/HistoryImg" />

        <TextView
            android:id="@+id/TxtHistoryDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_390_cal"
            android:textColor="#8D6E63"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/txtHistoryCal"
            app:layout_constraintStart_toEndOf="@+id/txtHistoryCal"
            app:layout_constraintTop_toTopOf="@+id/txtHistoryCal" />

        <TextView
            android:id="@+id/txtHistoryCal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_390_cal"
            android:textColor="#8D6E63"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/HistoryImg"
            app:layout_constraintStart_toEndOf="@+id/HistoryImg" />

        <TextView
            android:id="@+id/txtHistoryDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/_3_4_km"
            android:textColor="#4D2C23"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/TxtHistoryDuration"
            app:layout_constraintStart_toEndOf="@+id/HistoryImg"
            app:layout_constraintTop_toBottomOf="@+id/TxtHistoryDate" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>